<div class="container-fluid">
	{% block nodeMenu %}
		<div class="btn-toolbar" id="menu-node">
			<div class="btn-group">
				<a href="{{ path('sidus_choose_node', { 'node_id': node.id }) }}" class="btn" title="Add element"><i class="icon-plus"></i></a>
				<a href="{{ path('sidus_edit_node', { 'node_id': node.id }) }}" class="btn" title="Edit"><i class="icon-pencil"></i></a>
				<button class="btn" title="Add to favorites"><i class="icon-star-empty"></i></button>
				<button class="btn" title="Print"><i class="icon-print"></i></button>
				<button class="btn dropdown-toggle" data-toggle="dropdown">
					<i class="icon-wrench"></i> <span class="caret"></span>
				</button>
				<ul class="dropdown-menu pull-right">
					<li><a href="#"><i class="icon-arrow-right"></i> Move</a></li>
					<li><a href="#"><i class="icon-share-alt"></i> Link</a></li>
					<li><a href="#"><i class="icon-copy"></i> Copy</a></li>
					<li><a href="#"><i class="icon-lock"></i> Permissions</a></li>
					<li class="divider"></li>
					<li class="disabled"><a href="#"><i class="flag-english flag-white"></i> English version</a></li>
					<li><a href="#"><i class="flag-french"></i> French version</a></li>
					<li><a href="#"><i class="icon-flag"></i> Localize</a></li>
					<li class="divider"></li>
					<li><a href="#"><i class="icon-list"></i> History</a></li>
					<li><a href="#"><i class="icon-signal"></i> Feed</a></li>
					<li class="divider"></li>
					<li class="disabled"><a href="#"><i class="icon-trash icon-white"></i> Delete</a></li>
				</ul>
			</div>
		</div>
	{% endblock %}
	<p class="node-infos-line">
		<big class="node-title">{{object}}</big><br class="hidden-phone"/><span class="visible-phone"> | </span>
		<span class="text-info">Type: <b>{{object.type}}</b></span><br class="hidden-phone"/><span class="visible-phone"> | </span>
		<small class="muted">Created by <a href="{{ path('sidus_show_node', { 'node_id': version.revisionby.id }) }}">{{ version.revisionby }}</a> {{ version.revision_date|datediff() }}</small>
	</p>
	<div class="hidden-phone">
		<p class="center"><i class="icon-folder-open img-polaroid" style="font-size:100px;"></i></p>
	</div>
</div>