{% extends 'SidusBundle:Default:base.html.twig' %}

{% block main %}
	<div class="btn-toolbar pull-right">
		<button class="btn" title="Thumbnail view"><i class="icon-th"></i></button>
		<button class="btn" title="Preview view"><i class="icon-th-list"></i></button>
		<button class="btn disabled" title="List view"><i class="icon-list-alt"></i></button>
	</div>
	<form class="navbar-search form-search" action="?filter" method="get">
		<div class="input-append">
			<input type="text" name="filter" class="span2 search-query" placeholder="Filter">
			<button type="submit" class="btn"><i class="icon-filter"></i></button>
		</div>
		<input type="submit" class="hide">
	</form>
	<table class="table table-striped table-hover table-condensed">
		<caption>
			<div class="pagination pagination-small pull-right">
				<ul>
					<li class="active"><a href="#">1</a></li>
					<li><a href="#">2</a></li>
					<li><a href="#">3</a></li>
					<li><a href="#">4</a></li>
					<li class="disabled"><a href="#">&hellip;</a></li>
					<li><a href="#">12</a></li>
				</ul>
			</div>
			<p class="infos muted pull-left">Elements 1-20 of 131</p>
		</caption>
		<thead>
			<tr>
				<th>#</th>
				<th>Name</th>
				<th>Type</th>
				<th class="hidden-phone">Creation</th>
				<th class="visible-desktop">Modification</th>
				<th class="hidden-phone">Owner</th>
				<th class="actions">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for i in range(1, 20) %}
			<tr>
				<td>{{i}}</td>
				<td><a href="#">Lorem ipsum</a></td>
				<td>Page</td>
				<td class="hidden-phone">12/05/2012</td>
				<td class="visible-desktop">13/05/2012</td>
				<td class="hidden-phone">Admin</td>
				<td>
					<div class="btn-toolbar actions">
						<div class="btn-group">
							<button class="btn btn-mini" title="View"><i class="icon-search"></i></button>
							<button class="btn btn-mini" title="Edit"><i class="icon-pencil"></i></button>
							<button class="btn btn-mini" title="Add to favorites"><i class="icon-star-empty"></i></button>
							<button class="btn dropdown-toggle btn-mini" data-toggle="dropdown">
								<i class="icon-wrench"></i> <span class="caret"></span>
							</button>
							<ul class="dropdown-menu pull-right">
								<li><a href="#"><i class="icon-arrow-right"></i> Move</a></li>
								<li><a href="#"><i class="icon-share-alt"></i> Link</a></li>
								<li><a href="#"><i class="icon-repeat"></i> Copy</a></li>
								<li><a href="#"><i class="icon-lock"></i> Permissions</a></li>
								<li class="divider"></li>
								<li><a href="#"><i class="icon-list"></i> History</a></li>
								<li><a href="#"><i class="icon-signal"></i> Feed</a></li>
								<li class="divider"></li>
								<li class="disabled"><a href="#"><i class="icon-trash icon-white"></i> Delete</a></li>
							</ul>
						</div>
					</div>
				</td>
			</tr>
			{% endfor %}
		</tbody>
		<caption class="caption-bottom">
			<div class="pagination pagination-small pull-right">
				<ul>
					<li class="active"><a href="#">1</a></li>
					<li><a href="#">2</a></li>
					<li><a href="#">3</a></li>
					<li><a href="#">4</a></li>
					<li class="disabled"><a href="#">&hellip;</a></li>
					<li><a href="#">12</a></li>
				</ul>
			</div>
			<p class="infos muted pull-left">Elements 1-20 of 131</p>
		</caption>
	</table>
{% endblock %}