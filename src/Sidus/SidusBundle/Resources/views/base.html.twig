<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="{{ _charset }}">
	<title>{% block title %}Sidus{% endblock %}</title>
	{% block metas %}
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="">
		<meta name="author" content="">
		<link rel="shortcut icon" href="{{ asset('bundles/sidus/favicon.png') }}">
	{% endblock %}
	{% stylesheets filter='cssrewrite,lessphp,?yui_css'
		'@MopaBootstrapBundle/Resources/public/less/mopabootstrapbundle.less'
		'bundles/font-awesome/less/font-awesome.less'
		'@SidusBundle/Resources/public/css/*'
	%}
	   <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="all" />
	{% endstylesheets %}
	<!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
	<!--[if lt IE 9]>
	  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
</head>
<body>
	<div class="navbar navbar-fixed-top" id="navbar-top">
		<div class="navbar-inner">
			{% block brand %}<a class="brand" href="#">Sidus</a>{% endblock %}
			{% block searchbar %}
				<form class="navbar-search form-search pull-left" action="?search" method="get">
					<div class="input-append">
						<input type="text" name="searchtext" class="span2 search-query" placeholder="Search">
						<button type="submit" class="btn"><i class="icon-search"></i></button>
					</div>
					<input type="submit" class="hide">
				</form>
			{% endblock %}
			
			{% block breadcrumb %}
				<ul class="breadcrumb">
					{% if node.ascendants is defined %}
					{% for ascendant in node.ascendants %}
						<li><a href="{{ path('sidus_view_node', {'id_node':ascendant.id}) }}">{{ ascendant.nodename }} <span class="divider">/</span></a></li>
					{% endfor %}
					{% endif %}
				</ul>
			{% endblock %}
			{% block myself %}
				<ul class="nav pull-right">
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="hidden-phone">Vincent Chalnot</span><i class="icon-cog hidden-tablet hidden-desktop"></i><b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li><a href="#"><i class="icon-home"></i> Profile</a></li>
							<li><a href="#"><i class="icon-cog"></i> Preferences</a></li>
							<li class="divider"></li>
							<li><a href="#"><i class="icon-off"></i> Logout</a></li>
						</ul>
					</li>
				</ul>
			{% endblock %}
		</div>
	</div>
	<div class="container-west">
		{% block container_west %}
			{% include 'SidusBundle::container-west.html.twig' %}
		{% endblock %}
	</div>
	<div class="container-east">
		{% block container_east %}
			{% include 'SidusBundle::container-east.html.twig' %}
		{% endblock %}
	</div>
	<div class="container-center">
		<div class="container-fluid" id="main">
			{% block messages %}
				{% if app.session.hasFlash('error') %}
					<div class="alert alert-error">
					  <button type="button" class="close" data-dismiss="alert">&times;</button>
					  {{ app.session.flash('error') }}
					</div>
				{% endif %}
				{% if app.session.hasFlash('warning') %}
					<div class="alert">
					  <button type="button" class="close" data-dismiss="alert">&times;</button>
					  {{ app.session.flash('warning') }}
					</div>
				{% endif %}
				{% if app.session.hasFlash('success') %}
					<div class="alert alert-success">
					  <button type="button" class="close" data-dismiss="alert">&times;</button>
					  {{ app.session.flash('success') }}
					</div>
				{% endif %}
				{% if app.session.hasFlash('info') %}
					<div class="alert alert-info">
					  <button type="button" class="close" data-dismiss="alert">&times;</button>
					  {{ app.session.flash('info') }}
					</div>
				{% endif %}
			{% endblock %}
			{% block main %}{% endblock %}
		</div>
	</div>
	{% javascripts '@MopaBootstrapBundle/Resources/public/js/*' %}
		<script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}
</body>
</html>
