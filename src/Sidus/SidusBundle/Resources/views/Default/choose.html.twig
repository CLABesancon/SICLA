{% extends 'SidusBundle::base.html.twig' %}

{% block message %}
<div class="alert">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong>Warning!</strong> This is a warning example.
</div>
{% endblock %}

{% block main %}
	<div>
		<h1>Choose a type to add</h1>
		<form action="" method="post">
			<ul class="unstyled type-list">
			{% for type in types %}
					<li><button class="btn" type="submit" name="{{type.controller}}">{{type.controller}}</button></li>
			{% endfor %}
			</ul>
		</form>
	</div>
{% endblock %}
