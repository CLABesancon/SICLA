{% extends 'SidusBundle::base.html.twig' %}

{% block message %}
	{% if app.session.hasFlash('error') %}
		<div class="alert alert-error">
		  <button type="button" class="close" data-dismiss="alert">&times;</button>
		   {{ app.session.flash('error') }}
		</div>
	{% endif %}
{% endblock %}

{% block main %}
	<div class="hero-unit">
		<h1>Hello world !</h1>
		<p>The Sf2 SidusBundle is a comprehensive extension to Symfony to create dynamic website and web-applications easily.</p>
		<p>
			<a class="btn btn-primary btn-large">Learn more</a>
		</p>
	</div>
{% endblock %}