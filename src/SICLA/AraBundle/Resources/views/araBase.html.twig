<!DOCTYPE html>
<html>
<head>
	<meta charset="{{ _charset }}">
	<title>{% block title %}Sidus{% endblock %}</title>
	{% block metas %}
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="">
		<meta name="author" content="">
		<link rel="shortcut icon" href="{{ asset('bundles/sidus/favicon.png') }}">
	{% endblock %}
	{% block stylesheets %}
		{% stylesheets filter='cssrewrite,lessphp,?yui_css'
			'bundles/mopabootstrap/less/mopabootstrapbundle-fa.less'
			'bundles/sidus/css/*'
			'bundles/siclaara/css/AraCSS.css'
			filter="cssrewrite" %}
	<link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
		%}
		   <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="all" />
		{% endstylesheets %}
	{% endblock %}
	<!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
	<!--[if lt IE 9]>
	  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
</head>
<body>
	<div class="navbar navbar-fixed-top" id="navbar-top">
		<div class="navbar-inner">
			{% block brand %}<a class="brand" href="#">Sidus</a>{% endblock %}
			{% block searchbar %}
				<form class="navbar-search form-search pull-left" action="?search" method="get">
					<div class="input-append">
						<input type="text" name="searchtext" class="span2 search-query" placeholder="Search">
						<button type="submit" class="btn"><i class="icon-search"></i></button>
					</div>
					<input type="submit" class="hide">
				</form>
			{% endblock %}

			{% block breadcrumb %}
			{% endblock %}
			
			{% block user %}
			{% endblock %}
		</div>
	</div>
	<div class="container-west">
		{% block container_west %}
		{% endblock %}
	</div>
	<div class="container-east">
		{% block container_east %}
		{% endblock %}
	</div>
	<div class="container-center">
		<div class="container-fluid" id="main">
			{% block messages %}
				{% if app.session.hasFlash('error') %}
					<div class="alert alert-error">
					  <button type="button" class="close" data-dismiss="alert">&times;</button>
					  {{ app.session.flash('error') }}
					</div>
				{% endif %}
				{% if app.session.hasFlash('warning') %}
					<div class="alert">
					  <button type="button" class="close" data-dismiss="alert">&times;</button>
					  {{ app.session.flash('warning') }}
					</div>
				{% endif %}
				{% if app.session.hasFlash('success') %}
					<div class="alert alert-success">
					  <button type="button" class="close" data-dismiss="alert">&times;</button>
					  {{ app.session.flash('success') }}
					</div>
				{% endif %}
				{% if app.session.hasFlash('info') %}
					<div class="alert alert-info">
					  <button type="button" class="close" data-dismiss="alert">&times;</button>
					  {{ app.session.flash('info') }}
					</div>
				{% endif %}
			{% endblock %}
			{% block main %}{% endblock %}
		</div>
	</div>
	{% block javascripts %}
		{% javascripts	'@SidusBundle/Resources/public/js/jquery-min.js'
						'@SidusBundle/Resources/public/js/bootstrap.min.js'
						'@MopaBootstrapBundle/Resources/public/js/*'
				%}
			<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?key=AIzaSyAS7Uc8vQAWOsnT6bA7ikC9xhy7Dry25S8&sensor=false"></script>
			<script type="text/javascript" src="{{ asset_url }}"></script> 
		{% endjavascripts %}
	{% endblock %}
</body>
</html>
