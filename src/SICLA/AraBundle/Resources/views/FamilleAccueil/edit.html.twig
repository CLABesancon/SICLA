{% extends 'SICLAAraBundle::base.html.twig' %}

{% block javascripts %}
	{{ parent() }}
	{% javascripts '@SICLAAraBundle/Resources/public/js/form_famille_accueil.js'%}
			<script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}	

{% block main %}
{% form_theme form 'SICLAAraBundle:Form:form_div_layout.html.twig' %}

<h1>Créer une nouvelle famille d'accueil</h1>
{% form_theme form 'SICLAAraBundle:Form:form_div_layout.html.twig' %}

<form action="" method="post">
	
	{{ form_label(form.typeAccueil,'Type d\'accueil') }}
	{{ form_widget(form.typeAccueil) }}
	
	{{ form_label(form.nbEnfants,'Combien d\'enfants avez-vous ?') }}
	{{ form_widget(form.nbEnfants, { 'attr': {'class': 'input-mini'} }) }}
	
	{# Création d'une nouvelle personne pour chaque enfant #}
	
	{{ form_label(form.typeLogement,'Vous vivez dans :') }}
	{{ form_widget(form.typeLogement) }}
	
	{{ form_label(form.ligneBus,'Ligne de bus à proximité :') }}
	{{ form_widget(form.ligneBus) }}
	
	{{ form_label(form.arretBus,"Nom de l'arrêt") }}
	{{ form_widget(form.arretBus) }}
	
	
	{{ form_label(form.fumeur,'Êtes-vous fumeur ?') }}
	{{ form_widget(form.fumeur	) }}
	
	{# Langues parlées / comprises #}
	<div class="famille">
	{{ form_label(form.RegimeAlimentaire, 'Votre régime alimentaire :') }}
	{{ form_widget(form.RegimeAlimentaire) }}
			
	{{ form_label(form.adaptableRegimeAlimentaire,'Pouvez-vous vous adapter à un régime alimentaire différent du votre ?') }}
	{{ form_widget(form.adaptableRegimeAlimentaire) }}
			
	{{ form_label(form.Loisirs, 'Quels sont vos loisirs ?') }}
	{{ form_widget(form.Loisirs) }}
			
	{{ form_label(form.Animaux, "Quels types d'animaux possédez vous ?") }}
	{{ form_widget(form.Animaux) }}
	</div>
	{{ form_label(form.nbLit, 'Combien de lits sont-ils disponibles ?') }}
	{{ form_widget(form.nbLit) }}
	
	{{ form_label(form.sdbPrivative, 'Le logement dispose-t-il d\'une salle de bains privative ?') }}
	{{ form_widget(form.sdbPrivative) }}
	
	<div class="semi-independance">
	{{ form_label(form.accesCuisine, 'L\'apprenant a-t-il accès à la cuisine ?') }}
	{{ form_widget(form.accesCuisine) }}
	
	{{ form_label(form.conditionsAccesCuisine, 'Sous quelles conditions ?') }}
	{{ form_widget(form.conditionsAccesCuisine) }}
	
	{{ form_label(form.loyer,'Loyer :') }}
	{{ form_widget(form.loyer) }}
	
	{{ form_label(form.charges,'Charges :') }}
	{{ form_widget(form.charges) }}
	</div>
	{{ form_label(form.ascenseur,'Votre logement dispose-t-il d\'un ascenseur ?') }}
	{{ form_widget(form.ascenseur) }}
	
	{{ form_label(form.debutDispo,'Disponible à partir du :') }}
	{{ form_widget(form.debutDispo) }}
	
	{{ form_label(form.finDispo,'jusqu\'au :') }}
	{{ form_widget(form.finDispo) }}
	
	{{ form_label(form.souhaitNationalite,'Souhait nationalité :') }}
	{{ form_widget(form.souhaitNationalite) }}
	
	{{ form_label(form.souhaitSexe,'Souhait sexe :') }}
	{{ form_widget(form.souhaitSexe) }}
	
	{{ form_label(form.souhaitPublic,'Public souhaité :') }}
	{{ form_widget(form.souhaitPublic) }}
	
	{{ form_label(form.remarquesParticulieres,'Avez vous des remarques particulières ?') }}
	{{ form_widget(form.remarquesParticulieres) }}
	

	<button class="btn" type="submit">Modifier</button>
</form>
{% endblock %}